{
  "name": "nimbus-electron",
  "version": "0.1.0",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start:web\" \"wait-on http://localhost:3000 && electron .\"",
    "start:web": "cd ../web && npm start",
    "build:web": "cd ../web && npm run build",
    "build": "npm run build:web && electron-builder",
    "dist": "electron-builder --win --x64"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0",
    "concurrently": "^8.0.0",
    "wait-on": "^7.0.0",
    "keytar": "^8.0.0"
  }
}
